#!/bin/bash

# xfce4-terminal theme changer utilizing xfconf-query to change syntax, 
# background, and foreground colors.  By sleekmason 14 Nov 2024

slate(){
xfconf-query -c xfce4-terminal -p /color-background -s "#1c1c28272929"
xfconf-query -c xfce4-terminal -p /color-foreground -s "#b1b1c4c4c4c4"
xfconf-query -c xfce4-terminal -p /color-palette -s "rgb(0,0,0);rgb(196,62,47);rgb(0,136,87);rgb(190,149,45);rgb(56,152,183);rgb(150,52,128);rgb(0,142,142);rgb(158,170,176);rgb(153,163,172);rgb(255,95,95);rgb(71,207,133);rgb(226,215,115);rgb(110,195,215);rgb(239,115,219);rgb(99,208,200);rgb(224,231,233)"
}
oceanic(){
xfconf-query -c xfce4-terminal -p /color-background -s "#12111d1c1f1f"
xfconf-query -c xfce4-terminal -p /color-foreground -s "#a9a9cccccccc"
xfconf-query -c xfce4-terminal -p /color-palette -s "rgb(0,0,0);rgb(196,62,47);rgb(0,136,87);rgb(190,149,45);rgb(56,152,183);rgb(150,52,128);rgb(0,142,142);rgb(158,170,176);rgb(153,163,172);rgb(255,95,95);rgb(71,207,133);rgb(226,215,115);rgb(110,195,215);rgb(239,115,219);rgb(99,208,200);rgb(224,231,233)"
}
arcadia(){
xfconf-query -c xfce4-terminal -p /color-background -s "#21212b2b3636"
xfconf-query -c xfce4-terminal -p /color-foreground -s "#b4b4d4d4e0e0"
xfconf-query -c xfce4-terminal -p /color-palette -s "rgb(0,0,0);rgb(196,62,47);rgb(0,136,87);rgb(190,149,45);rgb(56,152,183);rgb(150,52,128);rgb(0,142,142);rgb(158,170,176);rgb(153,163,172);rgb(255,95,95);rgb(71,207,133);rgb(226,215,115);rgb(110,195,215);rgb(239,115,219);rgb(99,208,200);rgb(224,231,233)"	
}
nightshade(){
xfconf-query -c xfce4-terminal -p /color-background -s "#1c1c21212929"
xfconf-query -c xfce4-terminal -p /color-foreground -s "#bcbcdadae6e6"
xfconf-query -c xfce4-terminal -p /color-palette -s "rgb(0,0,0);rgb(196,62,47);rgb(0,136,87);rgb(190,149,45);rgb(56,152,183);rgb(150,52,128);rgb(0,142,142);rgb(158,170,176);rgb(153,163,172);rgb(255,95,95);rgb(71,207,133);rgb(226,215,115);rgb(110,195,215);rgb(239,115,219);rgb(99,208,200);rgb(224,231,233)"	
}
fane(){
xfconf-query -c xfce4-terminal -p /color-background -s "#1d1d2b2b3333"
xfconf-query -c xfce4-terminal -p /color-foreground -s "#c5c5d4d4dbdb"
xfconf-query -c xfce4-terminal -p /color-palette -s "rgb(0,0,0);rgb(209,82,77);rgb(0,143,91);rgb(190,149,45);rgb(72,175,199);rgb(150,52,128);rgb(0,142,142);rgb(158,170,176);rgb(149,166,173);rgb(255,95,95);rgb(71,207,133);rgb(226,215,115);rgb(120,213,235);rgb(239,115,219);rgb(99,208,200);rgb(224,231,233)"	
}
denim(){
xfconf-query -c xfce4-terminal -p /color-background -s "#12111c1c1f1f"
