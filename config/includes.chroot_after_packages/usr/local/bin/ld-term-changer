yad --title "Terminal Colors" --escape-ok --borders=14 \
--form --center --width=440 --height=320 \
--button=" Exit!gtk-delete:0" \
--text="Terminal Colors - Will not change GTK themes\n" --text-align=center \
--window-icon=terminal \
    --form --columns=4 \
    --field="Adobe":FBTN "bash -c adobe" \
    --field="Adwaita Dark":FBTN "bash -c drow" \
    --field="Arcadia":FBTN "bash -c arcadia" \
    --field="Cube":FBTN "bash -c cube" \
    --field="Denim!":FBTN "bash -c denim" \
    --field="Drow":FBTN "bash -c drow" \
    --field="Earth":FBTN "bash -c earth" \
    --field="Fane":FBTN "bash -c fane" \
    --field="Forge":FBTN "bash -c forge" \
    --field="Forge Dark":FBTN "bash -c forge-dark" \
    --field="Ink":FBTN "bash -c ink" \
    --field="Island":FBTN "bash -c island" \
    --field="Nightshade":FBTN "bash -c nightshade" \
    --field="Ozark":FBTN "bash -c ozark" \
