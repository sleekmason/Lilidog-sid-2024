    --field="Adwaita":FBTN "bash -c adwaita" \
    --field="Broadwater":FBTN "bash -c broadwater" \
    --field="Cove":FBTN "bash -c cove" \
    --field="Ghost":FBTN "bash -c ghost" \
    --field="Mulberry":FBTN "bash -c mulberry"
