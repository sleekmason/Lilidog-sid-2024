export -f slate
export -f oceanic
export -f arcadia
export -f nightshade
export -f fane
export -f denim
export -f river
export -f ink
export -f forge-dark
export -f forge
export -f cube
export -f ozark
export -f island
export -f nordic-darker
export -f adobe
export -f drow
export -f earth
export -f adwaita-dark
export -f cove
export -f ghost
export -f bright
export -f mulberry
export -f broadwater
export -f adwaita

yad --title "Terminal Colors" --escape-ok --borders=14 \
--form --center --width=440 --height=370 \
--button=" Exit!gtk-delete:0" \
--text="Terminal Colors - Will not change GTK themes\n" --text-align=center \
--window-icon=terminal \
    --form --columns=4 \
    --field="                  Slate!/usr/share/xfce4/terminal/icons/paw-slate.png":FBTN "bash -c slate" \
    --field="             Oceanic!/usr/share/xfce4/terminal/icons/paw-oceanic.png":FBTN "bash -c oceanic" \
    --field="              Arcadia!/usr/share/xfce4/terminal/icons/paw-arcadia.png":FBTN "bash -c arcadia" \
    --field="       Nightshade!/usr/share/xfce4/terminal/icons/paw-nightshade.png":FBTN "bash -c nightshade" \
